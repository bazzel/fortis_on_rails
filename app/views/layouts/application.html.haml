!!!
%html
  %head
    %title Fortis On Rails
    / = stylesheet_link_tag :all
    / = stylesheet_link_tag :flutie
    = stylesheet_link_tag 'formtastic', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      %h1{:role => 'banner'} Fortis On Rails
      #content

        %nav
          %ul
            %li= link_to "Upload", new_upload_path
            %li= link_to "Link", '#'
            %li= link_to "Link", '#'

        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        = content_tag :h2, yield(:title) if show_title?

        = yield